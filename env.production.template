# Klario Production Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_DB=klario
POSTGRES_USER=klario_user
POSTGRES_PASSWORD=your_very_secure_postgres_password_here
POSTGRES_HOST_AUTH_METHOD=scram-sha-256
POSTGRES_INITDB_ARGS=--auth-host=scram-sha-256

# Redis Configuration
REDIS_PASSWORD=your_very_secure_redis_password_here

# Application Secrets
SESSION_SECRET=your_very_secure_session_secret_at_least_32_characters_long
NODE_ENV=production

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid (alternative to SMTP)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@getklario.com

# SMS Service Configuration
HELLOSMS_USERNAME=your_hellosms_username
HELLOSMS_PASSWORD=your_hellosms_password

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Backup Configuration
BACKUP_RETENTION_DAYS=7

# Domain Configuration (used by deployment script)
DOMAIN_NAME=getklario.com